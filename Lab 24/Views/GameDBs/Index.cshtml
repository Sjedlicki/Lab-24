@model IEnumerable<Lab_24.Models.GameDB>

@{
    ViewBag.Title = "Games Database";
}

<h2>Games Database</h2>

<p>
    @Html.ActionLink("Add New Game", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Release_Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Release_Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GamesID }) |
                @Html.ActionLink("Details", "Details", new { id = item.GamesID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GamesID })
            </td>
        </tr>
    }
</table>
